<?php if (Mage::helper('ultimo')->getCfg('header/compare')): ?>
	<?php $tmpHtml = $this->getChildHtml('compareMini'); ?>
	<?php if ($tmpHtml): ?>
		<?php echo $tmpHtml; ?>
	<?php endif;?>
