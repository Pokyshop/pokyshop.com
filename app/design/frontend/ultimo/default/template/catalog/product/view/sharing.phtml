function myFbFunction(){							
	window.open('https://www.facebook.com/share.php?s=100&<?php echo $_u;?>','face','height=600,width=650,scrollbars=yes').focus();	
}
function myTweetFunction(){							
	window.open('https://twitter.com/intent/tweet?url=<?php echo $_productUrl;?>&text=<?php echo $_productName;?>&via=Pokyshop','tweet','height=600,width=650').focus();	
}
function myGoogleFunction(){							
	window.open('https://plus.google.com/share?url=<?php echo $_productUrl;?>','gplus','height=600,width=650,scrollbars=yes').focus();	
}
function myPinFunction(){
	window.open( 'https://pinterest.com/pin/create/bookmarklet/?media=<?php echo $_productImageUrl;?>&url=<?php echo $_productUrl;?>&description=<?php echo $_productName;?>','pin','height=600,width=650').focus();	
