<?php 
$_product 			= $this->getProduct();
$_helper 			= $this->helper('catalog/output');
$_productName 		= urlencode(trim($_helper->productAttribute($_product, $_product->getName(), 'name')));
$_productImageUrl 	= urlencode(trim($this->helper('catalog/image')->init($_product, 'image')));
$_productUrl 		= urlencode(trim($_product->getProductUrl()));
$_u 				= 'p[url]=' . $_productUrl . '&p[images][0]=' . $_productImageUrl . '&p[title]=' . $_productName . '&p[summary]=' . urlencode(trim($_helper->productAttribute($_product, nl2br($_product->getShortDescription()), 'short_description')));
?>    
    
<ul class="sharing-links">
    <li><i onclick="myFbFunction()" title="Share on Facebook">Facebook</i></li>
    <li><i onclick="myTweetFunction()" title="Share on Twitter">Twitter</i></li>
